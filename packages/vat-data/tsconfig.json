{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false, // for compat with peer packages using ambient types

    "noEmit": true,
  },
  "include": ["src/**/*.js", "src/**/*.ts"]
}
